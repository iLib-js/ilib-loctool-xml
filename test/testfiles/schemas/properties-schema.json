{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "http://github.com/ilib-js/properties.json",
    "type": "object",
    "title": "The root schema",
    "description": "The root schema comprises the entire XML document.",
    "properties": {
        "properties": {
            "type": "object",
            "properties": {
                "entry": {
                    "type": "object",
                    "localizable": true,
                    "properties": {
                        "_attributes": {
                            "type": "object",
                            "properties": {
                                "key": {
                                    "type": "string",
                                    "localizableType": {
                                        "_text": "key"
                                    }
                                },
                                "i18n": {
                                    "type": "string",
                                    "localizableType": {
                                        "_text": "comment"
                                    }
                                },
                                "locale": {
                                    "type": "string",
                                    "localizableType": {
                                        "_text": "locale"
                                    }
                                }
                            }
                        },
                        "_text": {
                            "type": "string",
                            "localizableType": {
                                "_text": "source"
                            }
                        }
                    }
                }
            }
        }
    }
}